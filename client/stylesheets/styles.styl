@import 'nib';

@import url(http://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic);

$background-color = white;
$color = #444;

$highlight = seagreen;
$accent = darken($highlight, 30%);

$font-size = 140%;
$font-size-date = .75em;
$font-size-user = .75em;
$line-height = 1.5;
$font-family = 'Lora', 'Georgia', serif;


$breakpoint-medium = "all and (max-width: 900px)"
$breakpoint-small  = "all and (max-width: 600px)"

* {
  margin: 0;
  padding: 0;
}

h1, h2, h3, h4, h5, h6 {
  font-weight: normal;
  line-height: 1;
  margin: 0 0 1em;
}

em {
  font-style: italic;
  font-weight: bold;
}

html {
  min-height: 100%;
  font: normal $font-size/$line-height $font-family;
  background: $background-color;
  color: $color;
  -webkit-font-smoothing: antialiased;
  text-rendering: optimizeLegibility;
}

body {
  border-top: .5em solid $highlight;
}

.button {
  display: inline-block;
  font: italic normal 100%/$line-height $font-family;
  background: $color;
  color: $background-color;
  padding: .25em .75em;
  border: 0;
  border-radius: 0;
  cursor: pointer;
  width: auto;
  appearance: none;
  -webkit-font-smoothing: antialiased;
  text-rendering: optimizeLegibility;
}

#login-buttons {
  position: absolute;
  top: 0;
  right: 0;
  margin: 1.5em 1em;

  a {
    text-decoration: none;
    font-size: .75em;
  }

}

.accounts-dialog {
  width: 15em;
}

#login-dropdown-list .login-button {
  display: block;
  @extend .button;
}

.input {
  display: inline-block;
  font: normal 100%/$line-height $font-family;
  margin: 0;
  padding: 0;
  background: transparent;
  border: 0;
  border-bottom: 2px solid $color;
  appearance: none;
  -webkit-font-smoothing: antialiased;
  text-rendering: optimizeLegibility;

  &:focus {
    outline: 0;
    border-bottom-color: #aaa;
    color: black;
  }
}

input[type='text'], input[type='email'], input[type='password'],
input[type='number'], input[type='email'], input[type='tel'], textarea {
  @extend .input;
}

#login-sign-in-link {
  @extend .button;
}

textarea {
  width: 100%;
  display: block;
  resize: vertical;
  min-height: 2em;
  max-height: 6em;
}

.clearfix {
  zoom: 1;

  &:before,
  &:after {
    content: "";
    display: table;
  }

  &:after { clear: both; }

  display: block;
  clear: both;

}

.container {
  width: 50%;
  margin: 0 auto;
  margin-top: 2em;

  @media $breakpoint-medium {
    width: 75%;
  }

  @media $breakpoint-small {
    width: 90%;

  }
}

.usersList {
  position: absolute;
  right: 2.5%;
  top: 50%;
  margin-top: -100px;
  width: 20%;
  height: 200px;
  overflow-y: scroll;
  text-align: right;

  .user {
    display: block;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

  @media $breakpoint-medium {
    position: static;
    margin: 1em auto;
    width: 75%;
    text-align: center;
    height: auto;
  }

}




.add-award {
  padding: 1em;
  background: whitesmoke;

  .username {
    width: 12.5em;
  }

  .controls-button {
    display: block;
    margin-top: 1em;

    .submit {
      display: block;
      width: 100%;
      white-space: nowrap;
      text-overflow: ellipsis;
      overflow: hidden;
    }
  }
}

.submit {
  @extend .button;
}


hr {
  display: block;
  margin: 1em auto;
  height: .5em;
  line-height: 0;
  font-size: 2em;
  color: #ccc;
  text-align: center;
  border: 0;

  &:before { content: '\2026'; }
}


.pls-login {
  padding-bottom: 1em;
  box-shadow: 0 2px 0 $color;
}

.from-username, .to-username, .user {
  text-transform: uppercase;
  font-size: .75em;
  color: $accent;
}



.award {
  padding: 2em;
  position: relative;
  @extend .clearfix;

  &:hover {
    .remove_award { display: block; }
  }

  + .award {
    border-top: 1px dotted #444;
  }


  .createdAt,
  .awardText {
    float: left;
  }

  .createdAt {
    width: 25%;
    font-size: .75em;
    position: relative;
    top: .4em;
    margin-bottom: 1em;
  }

  .awardText {
    width: 75%;
  }

  @media $breakpoint-small {
    .createdAt, .awardText {
      width: auto;
      float: none;
      display: block;
    }

    .createdAt {
      position: static;
    }

  }

  .remove_award {
    display: none;
    font: normal $font-size-date $font-family;
    cursor: pointer;
    position: absolute;
    top: 0;
    right: 0;
    margin: 1em .5em;
  }
}


